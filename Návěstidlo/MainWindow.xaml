<Window x:Class="Návěstidlo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Návěstidlo"
        xmlns:controls="clr-namespace:Návěstidlo.controls"
        mc:Ignorable="d"
        AllowsTransparency="True"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="840" Width="600"
                SizeChanged="Window_SizeChanged"
        Padding="0"
        MouseDown="Window_MouseDown">
    <Grid>
        <Grid Background="{DynamicResource headlinecolor}" Height="40" VerticalAlignment="Top">
            <Label Content="Návěstidlo" Foreground="{DynamicResource headlinetxtcolor}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="40" VerticalAlignment="Center" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center"/>
            <Button Content="X" Style="{DynamicResource ButtonStyle2}" Click="Button_Click" Width="30" Height="30" BorderThickness="0,0,0,0" Padding="0,0,0,0" VerticalAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Right" Margin="0,0,5,0"/>
            <Button Content="_" Style="{DynamicResource ButtonStyle3}" VerticalAlignment="Center" Width="30" Height="30" Click="Button_Click_1" BorderThickness="0,0,0,0" Padding="0,-10,0,0" HorizontalAlignment="Left" FontFamily="Arial Black" FontWeight="Bold" FontSize="16" Margin="530,0,0,0"/>
        </Grid>
        <Grid Margin="0,40,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="127*"/>
                <ColumnDefinition Width="988*"/>
            </Grid.ColumnDefinitions>
            <controls:hamburgermenu Grid.ColumnSpan="2"></controls:hamburgermenu>
            <Border Opacity="0" BorderBrush="Black" MinWidth="500px" Margin="22,0,10,10" CornerRadius="10" Name="messagepanel" x:FieldModifier="public" Height="50" VerticalAlignment="Bottom" Visibility="Hidden" Grid.Column="1">
                <Grid>
                    <Button Name="okbtn" Content="Zavřít" x:FieldModifier="public" HorizontalAlignment="Right" VerticalAlignment="Center" Height="30" BorderThickness="0,0,0,0" BorderBrush="{x:Null}" Width="80" Click="okbtn_Click" Cursor="Hand" Margin="0,0,15,0"/>
                    <Label Name="zprava" x:FieldModifier="public" Content="Toto je testovací zpráva!" HorizontalAlignment="Left" Margin="80,0,0,0" VerticalAlignment="Center" FontSize="14" Height="28" Foreground="White"/>
                    <Label Name="typzpravy" Content="Info:" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" FontWeight="Bold" Foreground="White" Width="65" FontSize="14" Padding="0,5,5,5"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
