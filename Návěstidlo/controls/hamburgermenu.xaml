<UserControl x:Class="Návěstidlo.controls.hamburgermenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Návěstidlo.controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Name="Content" Background="{DynamicResource mainbg}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50" x:Name="NavLinksColumn" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid x:Name="menu" Grid.Column="0" HorizontalAlignment="Left" Width="50" Background="{DynamicResource menubg}">
            <ToggleButton Style="{DynamicResource tbxx}" Name="menucontrol" HorizontalAlignment="Left" VerticalAlignment="Top" Width="40" Height="40" IsEnabled="True" Click="ToggleButton_click" Cursor="Hand" FontSize="14" Margin="5,5,0,0">
                <Grid Height="40">
                    <Image Source="{DynamicResource menuico}" Width="20" Height="20" Margin="10,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <Label Content="Nabídka" VerticalAlignment="Center" Margin="43,0,0,0" FontSize="13" Width="122" Height="30" FontFamily="Arial" Padding="5,8,5,5" FontWeight="Bold" HorizontalAlignment="Left"/>
                </Grid>
            </ToggleButton>
            <RadioButton GroupName="menulinks" IsChecked="True" Template="{DynamicResource RBStyle1}" Command="{Binding Activebutton}" Click="Button_Click_3" CommandParameter="home" Name="home" HorizontalAlignment="Left" VerticalAlignment="Top" Width="40" Height="40" Cursor="Hand" Margin="5,50,0,0" Padding="0,-1,0,0">
                <Grid Height="40">
                    <Image Source="{DynamicResource domu}" Width="22" Height="22" Margin="7,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <Label Content="Domů" VerticalAlignment="Center" Margin="40,0,0,0" Width="125" Height="30" FontFamily="Arial" FontSize="13" Padding="5,8,5,5" FontWeight="Bold" HorizontalAlignment="Left"/>
                </Grid>
            </RadioButton>

            <!--   <Button Name="home" Style="{DynamicResource ButtonStyle1}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="170" Height="40" Cursor="Hand" Click="Button_Click_3" Margin="0,40,0,0">
                <Border Name="homeb"  HorizontalAlignment="Left" VerticalAlignment="Top" BorderThickness="2,0,0,0" BorderBrush="{DynamicResource activemenuitem}">
                    <Grid Width="170" Height="40">
                        <Image Source="{DynamicResource domu}" Width="22" Height="22" Margin="11,8,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                        <Label Content="{DynamicResource home}" VerticalAlignment="Center" Margin="45,0,0,0" Width="125" Height="30" FontFamily="Arial" FontSize="13" Padding="5,8,5,5" FontWeight="Bold" HorizontalAlignment="Left"/>
                    </Grid>
                </Border>
            </Button> -->
            <RadioButton GroupName="menulinks" Template="{DynamicResource RBStyle1}" Command="{Binding Activebutton}" CommandParameter="home" Margin="5,95,0,0" Width="40" Click="Button_Click_2" BorderThickness="0,0,0,0" Cursor="Hand" Height="40" VerticalAlignment="Top" Padding="0,-1,0,0" HorizontalAlignment="Left">
                <Grid Height="40">
                    <Image Source="{DynamicResource oaplikaci}" Width="22" Height="22" Margin="7,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <Label Content="Světelné návěsti" VerticalAlignment="Center" Margin="40,0,0,0"  Width="125" Height="30" FontFamily="Arial" FontSize="13" Padding="5,8,5,5" FontWeight="Bold" HorizontalAlignment="Left"/>
                </Grid>
            </RadioButton>
            <RadioButton GroupName="menulinks" Template="{DynamicResource RBStyle1}" Command="{Binding Activebutton}" CommandParameter="home" Margin="5,140,0,0" Width="40" Click="Button_Click_5" BorderThickness="0,0,0,0" Cursor="Hand" Height="40" VerticalAlignment="Top" Padding="0,-1,0,0" HorizontalAlignment="Left">
                <Grid Height="40">
                    <Image Source="{DynamicResource oaplikaci}" Width="22" Height="22" Margin="7,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <Label Content="Návěstidla" VerticalAlignment="Center" Margin="40,0,0,0"  Width="125" Height="30" FontFamily="Arial" FontSize="13" Padding="5,8,5,5" FontWeight="Bold" HorizontalAlignment="Left"/>
                </Grid>
            </RadioButton>
            <RadioButton GroupName="menulinks" Template="{DynamicResource RBStyle1}" Command="{Binding Activebutton}" CommandParameter="home" Margin="5,185,0,0" Width="40" Click="Button_Click_5" BorderThickness="0,0,0,0" Cursor="Hand" Height="40" VerticalAlignment="Top" Padding="0,-1,0,0" HorizontalAlignment="Left">
                <Grid Height="40">
                    <Image Source="{DynamicResource oaplikaci}" Width="22" Height="22" Margin="7,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <Label Content="Testy" VerticalAlignment="Center" Margin="40,0,0,0"  Width="125" Height="30" FontFamily="Arial" FontSize="13" Padding="5,8,5,5" FontWeight="Bold" HorizontalAlignment="Left"/>
                </Grid>
            </RadioButton>
            <RadioButton GroupName="menulinks" Template="{DynamicResource RBStyle1}" Command="{Binding Activebutton}" CommandParameter="home" Margin="5,0,0,50" Width="40" Click="Button_Click_5" BorderThickness="0,0,0,0" Cursor="Hand" Height="40" VerticalAlignment="Bottom" Padding="0,-1,0,0" HorizontalAlignment="Left">
                <Grid Height="40">
                    <Image Source="{DynamicResource nastaveni}" Width="22" Height="22" Margin="7,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <Label Content="Nastavení" VerticalAlignment="Center" Margin="40,0,0,0"  Width="125" Height="30" FontFamily="Arial" FontSize="13" Padding="5,8,5,5" FontWeight="Bold" HorizontalAlignment="Left"/>
                </Grid>
            </RadioButton>
            <RadioButton GroupName="menulinks" Template="{DynamicResource RBStyle1}" Command="{Binding Activebutton}" CommandParameter="home" Margin="5,0,0,5" Width="40" Click="Button_Click_4" BorderThickness="0,0,0,0" Cursor="Hand" Height="40" VerticalAlignment="Bottom" Padding="0,-1,0,0" HorizontalAlignment="Left">
                <Grid Height="40">
                    <Image Source="{DynamicResource oaplikaci}" Width="22" Height="22" Margin="7,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <Label Content="O aplikaci" VerticalAlignment="Center" Margin="40,0,0,0" Width="125" Height="30" FontFamily="Arial" FontSize="13" Padding="5,8,5,5" FontWeight="Bold" HorizontalAlignment="Left"/>
                </Grid>
            </RadioButton>
        </Grid>

        <GridSplitter x:Name="spltNavLinks" Grid.Column="1" />

        <Grid x:Name="contentSection" Grid.Column="2">
            <Frame x:Name="nav" x:FieldModifier="public" RenderTransformOrigin="0.8,0.589" ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.CanContentScroll="True" Source="/stranky/main.xaml" NavigationUIVisibility="Hidden" Background="#00000000" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"/>
        </Grid>
    </Grid>
</UserControl>
