<Page x:Class="Návěstidlo.stranky.Navestp"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Návěstidlo.stranky"
      mc:Ignorable="d" d:DesignWidth="380"
  Title="Navestp" Height="740">
    <Page.Resources>
        <SolidColorBrush x:Key="labelfor" Color="#fcba03"/>
        <Style TargetType="{x:Type Label}" x:Key="indikator1">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Foreground" Value="{StaticResource labelfor}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Label">
                        <Border BorderThickness="0,0,0,2" BorderBrush="{DynamicResource DefaultForegroundBrush}" HorizontalAlignment="Left">
                            <ContentPresenter Margin="5"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid RenderTransformOrigin="0.499,0.479">
        <Label Name="headline" Content="---" Margin="15,10,15,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold" FontSize="14"/>
        <Grid Name="navest" Width="84" Height="344" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,96,0,0" Background="Black">
            <Ellipse Name="x1" Height="50" Stroke="Black" Width="50" Margin="17,10,17,0" VerticalAlignment="Top" Visibility="Hidden">
                <Ellipse.Fill>
                    <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                        <RadialGradientBrush.GradientStops>
                            <GradientStop Color="#f1f50a" Offset="0.40" />
                            <GradientStop Color="#888a2f" Offset="0.85" />
                            <GradientStop Color="Black" Offset="1" />
                        </RadialGradientBrush.GradientStops>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse Name="x2" Height="50" Stroke="Black" Width="50" Margin="17,65,17,0" VerticalAlignment="Top" Visibility="Hidden">
                <Ellipse.Fill>
                    <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                        <RadialGradientBrush.GradientStops>
                            <GradientStop Color="#16cc47" Offset="0.40" />
                            <GradientStop Color="#1f542d" Offset="0.85" />
                            <GradientStop Color="Black" Offset="1" />
                        </RadialGradientBrush.GradientStops>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse x:Name="x6" Height="50" Width="50" Visibility="Hidden" Margin="17,232,17,62">
                <Ellipse.Fill>
                    <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                        <GradientStop Color="#3939e6" Offset="0.40" />
                        <GradientStop Color="#0909ed" Offset="0.85" />
                        <GradientStop Color="Black" Offset="1" />
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse Name="x3" Height="50" Stroke="Black" Width="50" Margin="17,122,17,0" VerticalAlignment="Top" Visibility="Hidden">
                <!-- Červená -->
                <Ellipse.Fill>
                    <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                        <RadialGradientBrush.GradientStops>
                            <GradientStop Color="#ff0000" Offset="0.40" />
                            <GradientStop Color="#9c2222" Offset="0.85" />
                            <GradientStop Color="Black" Offset="1" />
                        </RadialGradientBrush.GradientStops>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse Name="x4" Height="50" Stroke="Black" Width="50" Margin="17,177,17,0" VerticalAlignment="Top" Visibility="Hidden">
                <!-- Bílá -->
                <Ellipse.Fill>
                    <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                        <RadialGradientBrush.GradientStops>
                            <GradientStop Color="#fcfcfc" Offset="0.40" />
                            <GradientStop Color="#a3a3a2" Offset="0.85" />
                            <GradientStop Color="Black" Offset="1" />
                        </RadialGradientBrush.GradientStops>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse Name="x5" Height="50" Stroke="Black" Width="50" Margin="17,284,17,0" VerticalAlignment="Top" Visibility="Hidden">
                <Ellipse.Fill>
                    <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                        <RadialGradientBrush.GradientStops>
                            <GradientStop Color="#f1f50a" Offset="0.40" />
                            <GradientStop Color="#888a2f" Offset="0.85" />
                            <GradientStop Color="Black" Offset="1" />
                        </RadialGradientBrush.GradientStops>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
        </Grid>
        <Label Name="vzhlednav" Content="---" Margin="10,525,10,0" VerticalAlignment="Top" BorderBrush="Black" BorderThickness="1,1,1,1"/>
        <Border Margin="10,589,10,10" BorderBrush="Black" BorderThickness="1,1,1,1">
            <TextBlock Name="popisnav" HorizontalAlignment="Left" TextWrapping="Wrap" Text="---" VerticalAlignment="Top" Padding="5,5,0,0" Margin="-1,-1,0,0"/>
        </Border>
        <Label Content="Popis návěsti:" HorizontalAlignment="Left" Margin="10,558,0,0" VerticalAlignment="Top" FontWeight="Bold" Padding="0,5,5,5"/>
        <Label Content="Vzhled:" HorizontalAlignment="Left" Margin="10,494,0,0" VerticalAlignment="Top" FontWeight="Bold" Padding="0,5,5,5" Width="285"/>
        <StackPanel Margin="148,445,148,251" Background="Black" Width="84">
            <ProgressBar Name="line1" Visibility="Hidden" Height="10" Width="76" VerticalAlignment="Top" Margin="0,5,0,0" Background="#FFFBFBFA" BorderThickness="0,0,0,0"/>
            <ProgressBar Name="line2" Visibility="Hidden" HorizontalAlignment="Center" Height="10" Margin="0,10,0,0" VerticalAlignment="Top" Width="76" BorderThickness="0,0,0,0" Background="#FFFEFFFE"/>
        </StackPanel>
        <StackPanel Margin="148,44,148,649" Background="Black" Width="84">
            <TextBlock x:Name="ocekavanarychlost" Height="48" Width="83" Foreground="#FFF7FF00" Visibility="Visible" FontSize="34" TextAlignment="Center" Background="Black"/>
        </StackPanel>
    </Grid>
</Page>
