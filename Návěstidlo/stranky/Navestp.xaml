<Page x:Class="Návěstidlo.stranky.Navestp"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Návěstidlo.stranky"
      mc:Ignorable="d" d:DesignWidth="380"
  Title="Navestp" Height="740">
    <Page.Resources>
        <SolidColorBrush x:Key="labelfor" Color="#fcba03"/>
        <Style TargetType="{x:Type Label}" x:Key="indikator1">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Foreground" Value="{StaticResource labelfor}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Label">
                        <Border BorderThickness="0,0,0,2" BorderBrush="{DynamicResource DefaultForegroundBrush}" HorizontalAlignment="Left">
                            <ContentPresenter Margin="5"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid RenderTransformOrigin="0.499,0.479">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Name="headline" Content="---" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold" FontSize="14" Grid.ColumnSpan="2"/>
        <Grid Name="navest" Width="84" Height="344" Margin="0,96,0,0" Background="Black" Grid.ColumnSpan="2" VerticalAlignment="Top">
            <Ellipse Name="x1" Height="50" Stroke="Black" Width="50" Margin="17,10,17,0" VerticalAlignment="Top" Visibility="Hidden">
                <Ellipse.Fill>
                    <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                        <RadialGradientBrush.GradientStops>
                            <GradientStop Color="#f1f50a" Offset="0.40" />
                            <GradientStop Color="#888a2f" Offset="0.85" />
                            <GradientStop Color="Black" Offset="1" />
                        </RadialGradientBrush.GradientStops>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse Name="x2" Height="50" Stroke="Black" Width="50" Margin="17,65,17,0" VerticalAlignment="Top" Visibility="Hidden">
                <Ellipse.Fill>
                    <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                        <RadialGradientBrush.GradientStops>
                            <GradientStop Color="#16cc47" Offset="0.40" />
                            <GradientStop Color="#1f542d" Offset="0.85" />
                            <GradientStop Color="Black" Offset="1" />
                        </RadialGradientBrush.GradientStops>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse x:Name="x6" Height="50" Width="50" Visibility="Hidden" Margin="17,232,17,62">
                <Ellipse.Fill>
                    <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                        <GradientStop Color="#3939e6" Offset="0.40" />
                        <GradientStop Color="#0909ed" Offset="0.85" />
                        <GradientStop Color="Black" Offset="1" />
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse Name="x3" Height="50" Stroke="Black" Width="50" Margin="17,122,17,0" VerticalAlignment="Top" Visibility="Hidden">
                <!-- Červená -->
                <Ellipse.Fill>
                    <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                        <RadialGradientBrush.GradientStops>
                            <GradientStop Color="#ff0000" Offset="0.40" />
                            <GradientStop Color="#9c2222" Offset="0.85" />
                            <GradientStop Color="Black" Offset="1" />
                        </RadialGradientBrush.GradientStops>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse Name="x4" Height="50" Stroke="Black" Width="50" Margin="17,177,17,0" VerticalAlignment="Top" Visibility="Hidden">
                <!-- Bílá -->
                <Ellipse.Fill>
                    <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                        <RadialGradientBrush.GradientStops>
                            <GradientStop Color="#fcfcfc" Offset="0.40" />
                            <GradientStop Color="#a3a3a2" Offset="0.85" />
                            <GradientStop Color="Black" Offset="1" />
                        </RadialGradientBrush.GradientStops>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse Name="x5" Height="50" Stroke="Black" Width="50" Margin="17,284,17,0" VerticalAlignment="Top" Visibility="Hidden">
                <Ellipse.Fill>
                    <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                        <RadialGradientBrush.GradientStops>
                            <GradientStop Color="#f1f50a" Offset="0.40" />
                            <GradientStop Color="#888a2f" Offset="0.85" />
                            <GradientStop Color="Black" Offset="1" />
                        </RadialGradientBrush.GradientStops>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
        </Grid>
        <Border x:Name="popisnavwin" Margin="10,525,10,10" BorderBrush="Black" BorderThickness="1,1,1,1" Grid.ColumnSpan="2">
            <TextBlock Name="popisnav" HorizontalAlignment="Left" TextWrapping="Wrap" Text="---" VerticalAlignment="Top" Padding="5,5,0,0" Margin="-1,-1,0,0"/>
        </Border>
        <Label x:Name="popisnavhead" Content="Popis návěsti:" Margin="10,494,10,0" VerticalAlignment="Top" FontWeight="Bold" Padding="0,5,5,5" Grid.ColumnSpan="2"/>
        <Grid Margin="0,445,0,251" Background="Black" Width="84" Grid.ColumnSpan="2">
            <ProgressBar Name="line1" Visibility="Hidden" Height="10" Width="76" VerticalAlignment="Top" Margin="0,10,0,0" Background="#FFFBFBFA" BorderThickness="0,0,0,0"/>
            <ProgressBar Name="line2" Visibility="Hidden" HorizontalAlignment="Center" Height="10" Margin="0,25,0,0" VerticalAlignment="Top" Width="76" BorderThickness="0,0,0,0" Background="#FFFEFFFE"/>
            <TextBlock Name="indicator2" Visibility="Hidden" Text="3" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="32" Padding="0,0,0,0"/>
        </Grid>
        <StackPanel Margin="148,43,148,650" Background="Black" Width="84" Grid.ColumnSpan="2">
            <TextBlock x:Name="ocekavanarychlost" Height="48" Width="84" Foreground="#FFF7FF00" Visibility="Visible" FontSize="34" TextAlignment="Center" Background="Black"/>
        </StackPanel>
        <Grid x:Name="navest_Copy" Width="84" Height="344" Visibility="Hidden" Background="Black" Grid.ColumnSpan="2" Margin="180,96,0,0" VerticalAlignment="Top">
            <Ellipse x:Name="x7" Height="50" Stroke="Black" Width="50" Margin="17,10,17,0" VerticalAlignment="Top" Visibility="Hidden">
                <Ellipse.Fill>
                    <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                        <GradientStop Color="#f1f50a" Offset="0.40" />
                        <GradientStop Color="#888a2f" Offset="0.85" />
                        <GradientStop Color="Black" Offset="1" />
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse x:Name="x8" Height="50" Stroke="Black" Width="50" Margin="17,65,17,0" VerticalAlignment="Top" Visibility="Hidden">
                <Ellipse.Fill>
                    <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                        <GradientStop Color="#16cc47" Offset="0.40" />
                        <GradientStop Color="#1f542d" Offset="0.85" />
                        <GradientStop Color="Black" Offset="1" />
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse x:Name="x9" Height="50" Width="50" Visibility="Hidden" Margin="17,232,17,62">
                <Ellipse.Fill>
                    <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                        <GradientStop Color="#3939e6" Offset="0.40" />
                        <GradientStop Color="#0909ed" Offset="0.85" />
                        <GradientStop Color="Black" Offset="1" />
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse x:Name="x10" Height="50" Stroke="Black" Width="50" Margin="17,122,17,0" VerticalAlignment="Top" Visibility="Hidden">
                <!-- Červená -->
                <Ellipse.Fill>
                    <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                        <GradientStop Color="#ff0000" Offset="0.40" />
                        <GradientStop Color="#9c2222" Offset="0.85" />
                        <GradientStop Color="Black" Offset="1" />
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse x:Name="x11" Height="50" Stroke="Black" Width="50" Margin="17,177,17,0" VerticalAlignment="Top" Visibility="Hidden">
                <!-- Bílá -->
                <Ellipse.Fill>
                    <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                        <GradientStop Color="#fcfcfc" Offset="0.40" />
                        <GradientStop Color="#a3a3a2" Offset="0.85" />
                        <GradientStop Color="Black" Offset="1" />
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse x:Name="x12" Height="50" Stroke="Black" Width="50" Margin="17,284,17,0" VerticalAlignment="Top" Visibility="Hidden">
                <Ellipse.Fill>
                    <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                        <GradientStop Color="#f1f50a" Offset="0.40" />
                        <GradientStop Color="#888a2f" Offset="0.85" />
                        <GradientStop Color="Black" Offset="1" />
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
        </Grid>
        <Grid Name="druhyindikator" Visibility="Hidden" Margin="180,445,0,251" Background="Black" Width="84" Grid.ColumnSpan="2">
            <TextBlock TextAlignment="Center" Foreground="Yellow" Text="3" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,-4,0,0"/>
            <ProgressBar HorizontalAlignment="Left" Height="5" Margin="10,0,0,0" VerticalAlignment="Center" Width="35" RenderTransformOrigin="0.5,0.5" Background="Yellow" BorderBrush="Yellow" Foreground="Yellow">
                <ProgressBar.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-90.0"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </ProgressBar.RenderTransform>
            </ProgressBar>
            <ProgressBar HorizontalAlignment="Left" Height="5" Margin="38,0,0,0" VerticalAlignment="Center" Width="35" RenderTransformOrigin="0.5,0.5" Background="Yellow" BorderBrush="Yellow" Foreground="Yellow">
                <ProgressBar.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-90.0"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </ProgressBar.RenderTransform>
            </ProgressBar>

        </Grid>
        <StackPanel Name="druhyindc" Margin="47,43,0,650" Background="Black" Width="84" Visibility="Hidden" Grid.Column="1" Grid.ColumnSpan="2" VerticalAlignment="Top" HorizontalAlignment="Left">
            <TextBlock x:Name="ocekavanarychlost1" Height="48" Width="84" Foreground="#FFF7FF00" Visibility="Visible" FontSize="34" TextAlignment="Center" Background="Black"/>
        </StackPanel>
    </Grid>
</Page>
