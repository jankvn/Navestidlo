<Page x:Class="Návěstidlo.stranky.Nastaveni"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Návěstidlo.stranky"
      mc:Ignorable="d" 
      d:DesignHeight="725" d:DesignWidth="380"
      Title="Nastaveni">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Nastavení aplikace" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.ColumnSpan="2" Margin="0,10,0,0" FontSize="16" FontWeight="Bold"/>
        <Label Content="Vzhled:" HorizontalAlignment="Left" Margin="10,46,0,0" VerticalAlignment="Top" Width="148" Height="30" VerticalContentAlignment="Center" FontSize="14"/>
        <ComboBox Name="themepick" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top" Width="140" Height="30" Margin="0,46,10,0" VerticalContentAlignment="Center" FontSize="14" Cursor="Hand">
            <ComboBoxItem x:Name="lighttheme" Content="Světlý"></ComboBoxItem>
            <ComboBoxItem x:Name="darktheme" Content="Tmavý"></ComboBoxItem>
        </ComboBox>
        <Button Grid.Column="1" Content="Uložit" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="Button_Click" Width="50" Height="30" Margin="0,0,10,10" Cursor="Hand"/>
        <Button Content="Vrátit výchozí nastavení" HorizontalAlignment="Right" Margin="0,0,65,10" VerticalAlignment="Bottom" Click="Button_Click_1" Height="30" Grid.ColumnSpan="2" Width="136" Cursor="Hand"/>

    </Grid>
</Page>
